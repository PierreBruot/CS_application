<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"

android:layout_width="wrap_content"
android:layout_height="match_parent"
android:background="@drawable/ic_list_menu_background"
    >

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:orientation="vertical"
    android:padding="16dp"
    android:nextFocusRight="@id/menu"
    android:paddingStart="40dp"
    android:paddingLeft="40dp"
    android:paddingEnd="40dp"
    android:paddingTop="82dp">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="returnMainMenu"
        android:tag="@+id/include"
        android:text="@string/groupe"
        android:textSize="35sp"
        android:textStyle="bold"
        android:drawableLeft="@drawable/ic_left_arrow"
        android:drawableStart="@drawable/ic_left_arrow"
        android:layout_margin="5dp"

        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/ic_right_arrow"
        android:drawableEnd="@drawable/ic_right_arrow"
        android:textSize="20sp"
        android:text="Messages"
        android:layout_margin="10dp"
        android:onClick="startMessageActivity"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Creer un groupe"
        android:onClick="startCreateGroupActivity"
        android:textSize="20sp"
        android:layout_margin="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Groupe epingle"
        android:textSize="20sp"
        android:layout_margin="10dp"
        />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Evenement des groupes"
        android:layout_margin="10dp"
        android:textSize="20sp"
        />



</LinearLayout>
</FrameLayout>